<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:id="@+id/newClippingAddImage"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:background="@drawable/addimage"
        android:layout_gravity="center"
        android:layout_margin="15px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newClippingText"
        android:layout_margin="15px"
        android:minHeight="100px"
        android:textStyle="normal"
        android:layout_centerInParent="true"
        android:hint="Notes..."
        android:layout_below="@+id/newClippingAddImage" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Clipping"
        android:id="@+id/addClipping"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:background="#3fcf54"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textSize="40px"/>
</RelativeLayout>